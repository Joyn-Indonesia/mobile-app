<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.joyn.me.home.submenu.setting.ChangePasswordActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:adjustViewBounds="true"
            android:background="@color/blue"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_arrow_back_yellow"
            android:tint="@color/white"
            android:adjustViewBounds="true"
            android:visibility="visible" />

        <customfonts.TextViewSFProDisplayMedium
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:text="@string/title_activity_change_password"
            android:textColor="@color/material_light_white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/logo_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/rect_white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_password" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/current_password"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signIn_password"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:theme="@style/SignInSignUpEditText"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="*******"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <View
                android:background="@color/view_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_newPassword" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/new_password"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signIn_password"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:theme="@style/SignInSignUpEditText"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="*******"
                    android:inputType="textPassword" />

            </LinearLayout>

            <View
                android:background="@color/view_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_confirmPassword" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/confirm_new_password"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signIn_password"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:theme="@style/SignInSignUpEditText"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="*******"
                    android:inputType="textPassword" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <customfonts.Button_SF_Pro_Display_Medium
        android:id="@+id/change_password"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimarySoft"
        android:text="@string/text_save"
        android:textColor="@color/material_light_white"
        android:textSize="18sp" />

</LinearLayout>
