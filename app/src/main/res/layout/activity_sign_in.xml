<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loginscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/logo_header" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.0dip">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/rect_white"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip">

                    <customfonts.TextViewSFProDisplayMedium
                        android:textSize="13.0sp"
                        android:textColor="@color/black"
                        android:padding="12.0sp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_email" />

                    <customfonts.TextViewSFProDisplayMedium
                        android:textSize="13.0sp"
                        android:textColor="@color/black"
                        android:padding="12.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <customfonts.EditTextSFProDisplayRegular
                        android:id="@+id/signIn_email"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/signIn_password"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:theme="@style/SignInSignUpEditText"
                        android:textSize="13sp"
                        android:background="@color/transpernet"
                        android:padding="12.0sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="demo@customer.com"
                        android:inputType="textEmailAddress" />

                </LinearLayout>

                <View
                    android:background="@color/view_line"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip">

                    <customfonts.TextViewSFProDisplayMedium
                        android:textSize="13.0sp"
                        android:textColor="@color/black"
                        android:padding="12.0sp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_password" />

                    <customfonts.TextViewSFProDisplayMedium
                        android:textSize="13.0sp"
                        android:textColor="@color/black"
                        android:padding="12.0sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":" />

                    <customfonts.EditTextSFProDisplayRegular
                        android:id="@+id/signIn_password"
                        android:maxLines="1"
                        android:nextFocusDown="@+id/signIn_password"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:theme="@style/SignInSignUpEditText"
                        android:textSize="13sp"
                        android:background="@color/transpernet"
                        android:padding="12.0sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="*******"
                        android:inputType="textPassword" />

                </LinearLayout>

            </LinearLayout>

            <customfonts.Button_SF_Pro_Display_Medium
                android:id="@+id/signIn_signInButton"
                android:textSize="15.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/rect_blue"
                android:padding="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Signin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/forgotpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/lupa"
                android:textAlignment="center"
                android:textColor="@color/material_red_800"
                android:textSize="20sp"
                android:textStyle="bold"
                android:onClick="forgot" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signIn_signUpButton"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/light_white_rect"
            android:padding="15.0sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip">

            <customfonts.TextViewSFProDisplayMedium
                android:textSize="15.299988sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGNUP"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>