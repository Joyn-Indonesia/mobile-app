<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreen"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40.0dip">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/rect_white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <ImageView
                    android:gravity="center"
                    android:background="@drawable/rect_bluetop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <ImageView
                    android:gravity="center"
                    android:src="@drawable/logo_header"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_firstName" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/signUp_firstName"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signUp_email"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/hint_firstName"
                    android:inputType="text" />

            </LinearLayout>

            <View
                android:background="@color/view_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_lastName" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/signUp_lastName"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signUp_email"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/hint_lastName"
                    android:inputType="text" />

            </LinearLayout>

            <View
                android:background="@color/view_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_email" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/signUp_email"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signUp_password"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <View
                android:background="@color/view_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_password" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/signUp_password"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signUp_phone"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword" />

            </LinearLayout>

            <View
                android:background="@color/view_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_phoneNumber" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/signUp_phone"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signUp_address"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/hint_phoneNumber"
                    android:inputType="number" />

            </LinearLayout>

            <View
                android:background="@color/view_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_address" />

                <customfonts.TextViewSFProDisplayMedium
                    android:textSize="13.0sp"
                    android:textColor="@color/black"
                    android:padding="12.0sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <customfonts.EditTextSFProDisplayRegular
                    android:id="@+id/signUp_address"
                    android:maxLines="1"
                    android:nextFocusDown="@+id/signUp_signUpButton"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="13sp"
                    android:background="@color/transpernet"
                    android:padding="12.0sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/hint_address"
                    android:inputType="text" />

            </LinearLayout>

            <View
                android:background="@color/view_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <customfonts.Button_SF_Pro_Display_Medium
                android:id="@+id/signUp_signUpButton"
                android:textSize="15.0sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/rect_blue"
                android:padding="15.0dip"
                android:text="@string/button_signUp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signUp_signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <customfonts.TextViewSFProDisplayMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_haveAccount"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <customfonts.TextViewSFProDisplayMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_signIn"
            android:textColor="@color/material_red_900"
            android:textSize="18dp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>