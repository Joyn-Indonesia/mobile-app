<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/spacing_xmedium"
    app:cardElevation="8dp"
    android:id="@+id/nearme_item"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nearme_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:background="@drawable/noimage"
            android:adjustViewBounds="true" />

        <customfonts.TextViewSFProDisplayMedium
            android:id="@+id/nearme_resto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Jank-Jank Wing Lover"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <customfonts.TextViewSFProDisplayRegular
                android:id="@+id/nearme_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/food_closed"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/nearme_mitra"
                android:background="@color/material_red_900" />


            <customfonts.TextViewSFProDisplayMedium
                android:id="@+id/nearme_mitra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/food_partner"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_marginLeft="15dp"
                android:background="@color/material_green_900" />
        </LinearLayout>

        <customfonts.TextViewSFProDisplayRegular
            android:id="@+id/nearme_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nearme_resto"
            android:layout_marginLeft="8dp"
            android:text="Jalan Soekarno Hatta No. 30, Malang"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <customfonts.TextViewSFProDisplayRegular
            android:id="@+id/nearme_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nearme_address"
            android:layout_marginLeft="8dp"
            android:text="2.1 KM | OPEN 12.00 - 21.00"
            android:textColor="@color/material_orange_800"
            android:textSize="14sp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>