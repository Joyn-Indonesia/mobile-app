<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="220dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/spacing_xmedium"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nearme_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="fitXY"
            android:src="@drawable/noimage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="5dp">

            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invitation"
                android:id="@+id/nearme_resto"
                android:textSize="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black" />

            <customfonts.TextViewSFProDisplayMedium
                android:id="@+id/nearme_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200km"
                android:textSize="14dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/material_orange_800" />


        </LinearLayout>


    </LinearLayout>


    <customfonts.TextViewSFProDisplayMedium
        android:id="@+id/nearme_closed"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nearme_resto"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/nearme_mitra"
        android:background="@drawable/rounded_corners_button_red"
        android:padding="4dp"
        android:text="@string/food_closed"
        android:textColor="@color/white"
        android:textSize="12sp" />

</android.support.v7.widget.CardView>


