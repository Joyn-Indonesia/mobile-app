<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/spacing_xmedium"
    app:cardElevation="5dp"
    android:id="@+id/nearme_item"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/restoranFoodSearchResult"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp">

        <ImageView
            android:id="@+id/restoranFoodSearchResult_icon"
            android:layout_centerVertical="true"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/pro_food" />

        <customfonts.TextViewSFProDisplayRegular
            android:id="@+id/restoranFoodSearchResult_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/restoranFoodSearchResult_distance"
            android:layout_toRightOf="@+id/restoranFoodSearchResult_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Gorengan Yahud Cipta rasa surabaya hahaha terus coba kontennya kebawah terus jadinya kaya gini."
            android:textSize="13sp"
            android:layout_height="wrap_content" />

        <customfonts.TextViewSFProDisplayMedium
            android:id="@+id/restoranFoodSearchResult_description"
            android:layout_width="wrap_content"
            android:layout_below="@id/restoranFoodSearchResult_content"
            android:layout_toLeftOf="@+id/restoranFoodSearchResult_distance"
            android:layout_toRightOf="@+id/restoranFoodSearchResult_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:text="Restoran"
            android:layout_height="wrap_content" />

        <customfonts.TextViewSFProDisplayMedium
            android:id="@+id/restoranFoodSearchResult_distance"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/material_orange_800"
            android:text="600.00 km"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>